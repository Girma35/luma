---
import Layout from '../../layouts/Layout.astro';
import { Sidebar } from '../../components/Sidebar';
import { Header } from '../../components/Header';
import { InventoryList } from '../../components/InventoryList';
---

<Layout title="Inventory - ReOrder AI">
  <div class="flex h-screen overflow-hidden bg-background-light dark:bg-background-dark">
    <Sidebar currentPath="/inventory" />
    <main class="flex-1 flex flex-col overflow-y-auto">
      <Header />
      <div class="flex-1 px-10 py-8 max-w-[1400px] mx-auto w-full">
        <div class="flex flex-wrap justify-between items-end gap-4 mb-8 border-b border-slate-100 pb-6">
          <div>
            <h1 class="text-black text-4xl font-black leading-tight tracking-tighter uppercase">Inventory</h1>
            <p class="text-slate-500 text-sm font-bold uppercase tracking-widest mt-1">SKUs from your connected stores</p>
          </div>
          <a href="/inventory/buying" class="flex items-center justify-center rounded bg-black text-white px-6 h-11 text-[10px] font-black uppercase tracking-widest shadow-xl hover:bg-slate-800 transition-all">
            <span class="material-symbols-outlined mr-2 text-[18px]">shopping_cart</span>
            Reorder
          </a>
        </div>
        <InventoryList client:load />
      </div>
    </main>
  </div>
</Layout>
