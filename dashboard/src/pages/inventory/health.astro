---
import Layout from '../../layouts/Layout.astro';
import { Sidebar } from '../../components/Sidebar';
import { Header } from '../../components/Header';
import { InventoryTable } from '../../components/InventoryTable';
---

<Layout title="Inventory Performance - ReOrder AI">
  <div class="flex h-screen overflow-hidden bg-background-light dark:bg-background-dark">
    <Sidebar client:load currentPath={Astro.url.pathname} />

    <!-- Main Content Area -->
    <main class="flex-1 flex flex-col overflow-y-auto">
      <!-- Top Header -->
      <Header client:load />

      <div class="flex-1 px-10 py-8 max-w-[1400px] mx-auto w-full">
        <!-- Header Section -->
        <div class="flex flex-wrap justify-between items-end gap-4 mb-8 border-b border-slate-100 pb-6">
          <div class="flex flex-col gap-2">
            <h1 class="text-black text-4xl font-black leading-tight tracking-tighter uppercase">Inventory Performance</h1>
            <p class="text-slate-500 text-sm font-bold uppercase tracking-widest">Asset Management & Risk Mitigation</p>
          </div>
          <div class="flex gap-3">
            <button class="flex items-center justify-center rounded bg-black text-white px-6 h-11 text-[10px] font-black uppercase tracking-widest shadow-xl hover:bg-slate-800 transition-all">
              <span class="material-symbols-outlined mr-2 text-[18px]">bolt</span>
              Run AI Optimization
            </button>
            <button class="flex items-center justify-center rounded bg-white border border-slate-300 text-black px-6 h-11 text-[10px] font-black uppercase tracking-widest hover:bg-slate-50 transition-all">
              <span class="material-symbols-outlined mr-2 text-[18px]">file_download</span>
              Export PDF
            </button>
          </div>
        </div>

        <!-- Global Health Progress Bar -->
        <div class="bg-white rounded p-8 border border-slate-200 mb-10 shadow-sm relative">
          <div class="flex flex-col gap-5">
            <div class="flex justify-between items-center">
              <div class="flex items-center gap-3">
                <span class="text-black font-black text-xs uppercase tracking-widest">Portfolio Stability</span>
                <span class="px-2 py-0.5 bg-success text-white text-[9px] font-black rounded uppercase">Target Met</span>
              </div>
              <div class="flex gap-6">
                <div class="flex items-center gap-2">
                  <div class="size-2 rounded-full bg-success"></div>
                  <span class="text-[10px] font-black text-slate-500 uppercase">74% Healthy Assets</span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="size-2 rounded-full bg-accent"></div>
                  <span class="text-[10px] font-black text-slate-500 uppercase">26% Liquidity Risk</span>
                </div>
              </div>
            </div>
            <div class="relative w-full h-2 bg-slate-100 rounded-full overflow-hidden flex">
              <div class="h-full bg-success opacity-80" style="width: 74%;"></div>
              <div class="h-full bg-accent opacity-80" style="width: 26%;"></div>
            </div>
          </div>
        </div>

        <!-- Snapshot Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
          <div class="bg-white p-6 border border-slate-200 shadow-sm">
            <p class="text-slate-400 text-[9px] font-black uppercase tracking-widest mb-1">Active SKUs</p>
            <div class="flex items-baseline gap-2">
              <p class="text-3xl font-black text-black tracking-tighter">2,482</p>
              <span class="text-[10px] font-bold text-success">+4%</span>
            </div>
          </div>
          <div class="bg-white p-6 border border-slate-200 shadow-sm">
            <p class="text-slate-400 text-[9px] font-black uppercase tracking-widest mb-1">Turnover Rate</p>
            <div class="flex items-baseline gap-2">
              <p class="text-3xl font-black text-black tracking-tighter">12.4x</p>
              <span class="text-[10px] font-bold text-success">OPTIMAL</span>
            </div>
          </div>
          <div class="bg-white p-6 border border-slate-200 shadow-sm border-l-4 border-accent">
            <p class="text-accent text-[9px] font-black uppercase tracking-widest mb-1">Total Risk Value</p>
            <div class="flex items-baseline gap-2">
              <p class="text-3xl font-black text-accent tracking-tighter">$142k</p>
              <span class="material-symbols-outlined text-accent text-sm">trending_up</span>
            </div>
          </div>
          <div class="bg-white p-6 border border-slate-200 shadow-sm">
            <p class="text-slate-400 text-[9px] font-black uppercase tracking-widest mb-1">Auto-Supply</p>
            <div class="flex items-baseline gap-2">
              <p class="text-3xl font-black text-black tracking-tighter">1.1k</p>
              <span class="text-[10px] font-bold text-success">ACTIVE</span>
            </div>
          </div>
        </div>

        <!-- Live inventory from API -->
        <InventoryTable client:load />
      </div>
    </main>
  </div>
</Layout>
