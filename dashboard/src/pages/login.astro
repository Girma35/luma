---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login - ReOrder AI">
  <main class="min-h-screen bg-background-light flex items-center justify-center px-4">
    <div class="w-full max-w-md bg-white border border-slate-custom-200 rounded-xl shadow-xl p-8">
      <div class="flex items-center gap-3 mb-8 justify-center">
        <div class="w-10 h-10 bg-primary rounded flex items-center justify-center">
          <span class="material-symbols-outlined text-white">analytics</span>
        </div>
        <span class="font-bold text-2xl text-primary tracking-tight">ReOrder AI</span>
      </div>

      <h1 class="text-2xl font-bold text-primary text-center mb-2">Welcome back</h1>
      <p class="text-sm text-slate-custom-600 text-center mb-6">Sign in to continue to your dashboard</p>

      <form class="space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-slate-custom-600 mb-1">Email</label>
          <input id="email" type="email" placeholder="you@company.com" class="w-full rounded-md border border-slate-custom-200 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" />
        </div>
        <div>
          <label for="password" class="block text-sm font-medium text-slate-custom-600 mb-1">Password</label>
          <input id="password" type="password" placeholder="••••••••" class="w-full rounded-md border border-slate-custom-200 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" />
        </div>

        <div class="flex items-center justify-between text-sm">
          <label class="inline-flex items-center gap-2 text-slate-custom-600">
            <input type="checkbox" class="rounded border-slate-custom-200 text-primary focus:ring-primary" />
            Remember me
          </label>
          <a href="#" class="text-primary hover:text-primary-hover font-medium">Forgot password?</a>
        </div>

        <a href="/dashboard" class="inline-flex w-full items-center justify-center rounded-md bg-primary px-4 py-2.5 text-white font-semibold hover:bg-primary-hover transition-colors">
          Sign in
        </a>
      </form>

      <p class="mt-6 text-center text-sm text-slate-custom-600">
        New to ReOrder AI?
        <a href="/" class="text-primary font-medium hover:text-primary-hover"> Back to home</a>
      </p>
    </div>
  </main>
</Layout>
