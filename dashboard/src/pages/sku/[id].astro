---
import Layout from '../../layouts/Layout.astro';
import { Sidebar } from '../../components/Sidebar';
import { Header } from '../../components/Header';
import { SkuPageContent } from '../../components/sku/SkuPageContent';

export const prerender = false;

const { id } = Astro.params ?? {};
---

<Layout title={id ? `SKU - ReOrder AI` : 'SKU - ReOrder AI'}>
  <div class="flex h-screen overflow-hidden bg-background-light dark:bg-background-dark">
    <Sidebar currentPath="/inventory" />
    <main class="flex-1 flex flex-col overflow-y-auto">
      <Header />
      <SkuPageContent client:load id={id ?? ''} />
    </main>
  </div>
</Layout>
