# /etc/systemd/system/reorder-dashboard.service
# Astro dashboard — Node.js standalone server

[Unit]
Description=ReOrder AI — Astro Dashboard
After=network.target

[Service]
User=deploy
Group=deploy
WorkingDirectory=/home/deploy/reorder-ai/dashboard
EnvironmentFile=/home/deploy/reorder-ai/dashboard/.env
Environment=HOST=0.0.0.0
Environment=PORT=4321
Environment=NODE_ENV=production

ExecStart=/usr/bin/node ./dist/server/entry.mjs

Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=reorder-dashboard

NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
